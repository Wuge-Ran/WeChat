.banner{
  height: 500rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.cont_item .cont_head image{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
  border:1px solid #fff;
  border-radius: 50%;
}
.cont_head image{
  vertical-align: middle;
}
.cont_img image{
  width: 100%;
}
.cont_intro{
  font-size: 24rpx;
  line-height: 30rpx;
}
.cont_item{
  border-top: 10px solid #e2e2e2;
  border-bottom: 10px solid #e2e2e2;
}
.user_like{
  display: flex;
  flex-direction: row;
}
.user_like image{
  width: 50rpx;
  height: 50rpx;
}
.user_like text{
  font-size: 24rpx;
  line-height: 50rpx;
  margin: 0 10rpx;
}